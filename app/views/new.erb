<div class="container text-center">
  <h1>Enter a new Task:</h1>
</div>
<div class="container">
  <form action="/tasks" method="post">
    <div class="form-group">
      <label for="exampleInputTask">Task Name</label>
      <input type="text" name="task[title]" class="form-control" id="exampleInputTask" placeholder="Task">
    </div>
    <div class="form-group">
      <label for="exampleInputDescription">Description</label>
      <textarea name="task[description]" type="text" class="form-control" id="exampleInputDescription" placeholder="Description"></textarea>
    </div>
    <input class="btn btn-success" type='submit' value='submit'/>
  </form>
</div>
