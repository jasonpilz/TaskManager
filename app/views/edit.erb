<div class="container text-center">
  <h1>Edit Task:</h1>
</div>
<div class="container">
  <form action="/tasks/<%= @task.id %>" method="POST">
    <input type="hidden" name="_method" value="PUT" />
    <div class="form-group">
      <label for="exampleInputTask">Task Name</label>
      <input type="text" name="task[title]" value="<%= @task.title %>" class="form-control" id="exampleInputTask">
    </div>
    <div class="form-group">
      <label for="exampleInputDescription">Description</label>
      <textarea name="task[description]" placeholder="<%= @task.description %>" type="text" class="form-control" id="exampleInputDescription"></textarea>
    </div>
    <input class="btn btn-success" type='submit'/>
  </form>
</div>
